<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root2"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:weightSum="1">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/a"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@color/material_blue_grey_800"
        android:text="Add Student To Yearbook"
        />



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_root13"
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="#DA5F6A"
            android:hint="Name of the Student"
            android:textColorHint="#DA5F6A"
            android:ems="20"
            android:id="@+id/editText1" />


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_root12"
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="#DA5F6A"
            android:hint="Enrollment No. of the Student"
            android:textColorHint="#DA5F6A"
            android:ems="20"
            android:id="@+id/editText2" />


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_root19"
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1"
        android:layout_weight="0.36">

        <Button
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_blue_grey_800"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="110dp"
            android:id="@+id/button" />
        <Button
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/material_blue_grey_800"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="-100dp"

            android:id="@+id/button2" />



    </LinearLayout>

</LinearLayout>
